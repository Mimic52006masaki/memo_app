<div class="container mx-auto max-w-3xl bg-white rounded-xl shadow-md p-6 mt-8">
  <h1 class="text-3xl font-bold mb-6">メモ一覧</h1>
  <div class="mb-4 text-right">
    <%= link_to "新しいメモ作成", new_memo_path, class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" %>
  </div>

  <% @memos.each do |memo| %>
    <div class="border-b border-gray-300 py-3 flex justify-between items-center">
      <%= link_to memo.title, memo_path(memo), class: "text-blue-600 hover:underline text-lg font-medium" %>
      <div>
        <%= link_to "編集", edit_memo_path(memo), class: "mr-4 text-gray-600 hover:text-blue-600" %>
        <%= link_to "削除", memo_path(memo), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "text-red-600 hover:underline" %>
      </div>
    </div>
  <% end %>

  <% if @memos.empty? %>
    <p class="text-gray-500 mt-4">メモはまだありません。新規作成してください。</p>
  <% end %>
</div>
