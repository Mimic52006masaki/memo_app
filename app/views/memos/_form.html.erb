<%= form_with model: memo, local: true do |f| %>
  <% if memo.errors.any? %>
    <div class="mb-6 p-4 bg-red-100 text-red-700 rounded">
      <h2 class="font-bold mb-2">エラーがあります:</h2>
      <ul class="list-disc list-inside">
        <% memo.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= f.label :title, "タイトル", class: "block font-semibold mb-2" %>
    <%= f.text_field :title, class: "input-field border border-gray-300 rounded px-3 py-2 w-full focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="mb-6">
    <%= f.label :content, "本文", class: "block font-semibold mb-2" %>
    <%= f.text_area :content, rows: 8, class: "input-field border border-gray-300 rounded px-3 py-2 w-full focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <%= f.submit class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
<% end %>
